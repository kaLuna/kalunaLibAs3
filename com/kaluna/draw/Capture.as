package com.kaluna.draw{	import flash.display.Bitmap;	import flash.display.BitmapData;	import flash.display.Sprite;	import flash.geom.Matrix;	public class Capture extends Sprite{		private var bmpd:BitmapData;		private var bmp:Bitmap;		private var mat:Matrix;		public function Capture(capture:*){			// リンケージで生成した表示クラス			bmpd = new BitmapData(capture.width, capture.height ,true,0x00000000);			mat = new Matrix();			mat.scale(capture.scaleX,capture.scaleY);			bmpd.draw( capture ,mat);			bmp = new Bitmap(bmpd);			bmp.smoothing = true;			addChild(bmp);			//capture = null;		}		public function get getBitmap():Bitmap{			return bmp;		}		public function get getBitmapData():BitmapData{			return bmpd;		}		public function rmBitmap():void{			bmpd.dispose();		}	}}