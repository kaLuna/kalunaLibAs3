eight);			addChild(tField);					}		//吹き出し生成		private function createRect(tObj,w,h,col):void{			var topPos:Number = rad+downMgn+h+topMgn;			//tObj.graphics.lineStyle(1, 0x000000);			tObj.graphics.clear();			tObj.graphics.beginFill(col);			if(flg){				tObj.graphics.moveTo(0,0);				tObj.graphics.lineTo(0,-rad);				tObj.graphics.lineTo(rad,-rad);				tObj.graphics.lineTo(0,0);			}			tObj.graphics.drawRoundRect(leftPos,-topPos,w+rightMgn,topPos-rad,ellipse);			tObj.graphics.endFill();		}	}}